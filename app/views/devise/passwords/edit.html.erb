<div class="login-wrapper">
  <div class="left-scene">
    <%= image_tag 'logo_banner_white.svg', class: "logo" %>
    <%= image_tag 'net.svg', class: 'net' %>
    <div class="quote">
      <%= image_tag('quote.svg') %>
      <span class="large">Most people think ‘selling’ is the same as ‘talking’. But the most effective salespeople know that listening is the most important part of their job.</span>
      <div class="stretch">
        <span class="author">Roy Bartell</span>
        <%= image_tag 'quote.svg', class: 'reverse' %>
      </div>
    </div>
  </div>
  <div class="right-scene">
    <div class="right-scene-container">
      <div class="header">
        <h4 class="bold"><%= "Hey#{resource.first_name ? " #{resource.first_name}" : ''}" %>, set your new password</h4>
      </div>
      <div class="seperater"></div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'login-form' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="move-placeholder-wrapper">
          <%# if @minimum_password_length %>
            <!-- <em>(<%#= @minimum_password_length %> characters minimum)</em> -->
          <%# end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: ' ', class: 'move-placeholder-input' %>
          <%= f.label :password, "New password", class: 'move-placeholder-placeholder' %>
        </div>

        <div class="move-placeholder-wrapper">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'move-placeholder-input', placeholder: ' ' %>
          <%= f.label :password_confirmation, "Confirm new password", class: 'move-placeholder-placeholder' %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: 'secondary stretch' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
